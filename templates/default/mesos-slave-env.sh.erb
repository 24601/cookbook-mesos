# This file contains environment variables that are passed to mesos-slave.
# To get a description of all options run mesos-slave --help; any option
# supported as a command-line option is also supported as an environment
# variable.

# You must at least set MESOS_master.

# The mesos master URL to contact. Should be host:port for
# non-ZooKeeper based masters, otherwise a zk:// or file:// URL.

<% if node[:mesos][:slave][:master_url] then %>
export MESOS_master=<%= node[:mesos][:slave][:master_url] %>
<% end %>
<% if node[:mesos][:slave][:ip] then %>
export MESOS_ip=<%= node[:mesos][:slave][:ip] %>
<% end %>

# Other options you're likely to want to set:
export MESOS_log_dir=<%= node[:mesos][:slave][:log_dir] %>
export MESOS_work_dir=<%= node[:mesos][:slave][:work_dir] %>
export MESOS_isolation=<%= node[:mesos][:slave][:isolation] %>
